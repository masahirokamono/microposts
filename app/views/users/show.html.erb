<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
    <h2>
  名前：<%= @user.name %></br>
  E-mail : <%= @user.email %></br>
  住まい : <%= @user.city %></br>
  年齢 : <%= @user.age %></br>
  職業 : <%= @user.job %></br>
  一言 : <%= @user.profilecomment %></br>


<% if current_user == @user %>
  <%= link_to "編集する", edit_user_path(@user) %><br>
<% end %>
<%= link_to "Homeへ戻る", root_path %>
  </div>
</div>
